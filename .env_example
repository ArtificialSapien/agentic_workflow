# General Configuration
# Options: "azure" or "openai"
LLM_PROVIDER=azure
# Model name for the provider
MODEL_NAME=gpt-4o-mini
# Default temperature setting
TEMPERATURE=0.8
# Maximum retries for API requests
MAX_RETRIES=3
# Maximum tokens to generate (optional)
MAX_TOKENS=None
# Timeout in seconds for API calls (optional)
TIMEOUT=None

# Azure OpenAI Configuration
# Azure OpenAI API Key
AZURE_OPENAI_API_KEY=your_azure_api_key_here
# Endpoint URL for Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-azure-endpoint.openai.azure.com
# Deployment name for the Azure OpenAI model
AZURE_DEPLOYMENT=gpt-4o-mini
# API version to use with Azure OpenAI
OPENAI_API_VERSION=2023-09-01-preview

# OpenAI Configuration
# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here
# Base URL for OpenAI API (optional if using default)
OPENAI_API_BASE=https://api.openai.com/v1

# Video generation
STABILITY_AI_API_KEY=""

# Meme generation
IMGFLIP_USERNAME=""
IMGFLIP_PASSWORD=""

# SerpAPI (Google News API)
SERP_API_KEY=""

# Grow API for Text Summarization
GROQ_API_KEY=""

VITE_ALLOW_GUEST=true
VITE_API_BASE_URL=http://localhost:8000

# Configuration of the app's business logic
MAX_NUMBER_OF_ARTICLES=2

